#!/bin/sh
# -blur 0x3
# -paint 1 -swirl 360
#scrot -o /home/e4/images/wallpapers/lock.png -e 'convert $f -interpolate nearest -virtual-pixel mirror -spread 5 $f' && LANG=en_US.UTF-8 i3lock -n -e -i /home/e4/images/wallpapers/lock.png
# Replaced i3lock with i3lock-color which provies the blurring functionality natively
#i3lock -n -e -B 5 --keylayout 2 --indicator --pass-media-keys --pass-volume-keys --ringcolor=FF400000 --greetertext="Hello Master" --no-verify
B='#00000000'  # blank
C='#ffffff22'  # clear ish
D='#fe4000dd'  # default
T='#ff4000ff'  # text
W='#e80000ff'  # wrong
V='#088203ff'  # verifying

i3lock -n -e \
--pass-media-keys     \
--pass-volume-keys    \
\
--insidever-color=$C   \
--ringver-color=$V     \
\
--insidewrong-color=$C \
--ringwrong-color=$W   \
\
--inside-color=$B      \
--ring-color=$D        \
--line-color=$B        \
--separator-color=$D   \
\
--verif-color=$T        \
--wrong-color=$T        \
--time-color=$T        \
--date-color=$T        \
--layout-color=$T      \
--keyhl-color=$W       \
--bshl-color=$W        \
\
--screen 1            \
--blur 5              \
--clock               \
--indicator           \
--time-str="%H:%M:%S"  \
--date-str="%A %d/%m/%Y" \
--keylayout 2         \
--verif-text="A ver..." \
--wrong-text="Nope!" \
#--no-verify # For testing
