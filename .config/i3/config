# Make the currently focused window a scratchpad
bindsym $mod+Control+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show
bindsym $mod+b bar mode toggle
#bindsym $mod+less exec --no-startup-id variety --previous
#bindsym $mod+dead_acute exec --no-startup-id variety --toggle-pause
#bindsym $mod+Shift+greater exec --no-startup-id variety --next
