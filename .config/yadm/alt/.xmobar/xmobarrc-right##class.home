Config {
    font = "Source Code Pro 11"
  , fgColor = "#646464"
  , alpha = 204
  , alignSep = "}{"
  , position = TopW L 100
  , iconRoot = "/home/e4/.xmobar/xpm"
  , commands = [
                 Run XPropertyLog "_XMONAD_LOG_1"
               , Run Com "/home/e4/.xmobar/trayer-padding-icon.sh" [] "trayerpad" 20
               , Run Date "<fc=#C8FE2E> %a %d %b %Y  %H:%M:%S</fc>" "date" 10
