               , Run Mpris2 "spotify" ["-t", "<artist> - <title>"] 10
               , Run CatInt 0 "/home/e4/.local/share/emilios-unread" [] 20
               , Run CatInt 1 "/home/e4/.local/share/pkgs-updates" [] 600
               , Run Kbd [("us(altgr-intl)","us")]
               , Run Locks
               ]
  , template = "%_XMONAD_LOG_1% }{ <fc=#C0F387> %kbd%</fc> | <fc=purple> %cat1%</fc> | <fc=#DD1900> %cat0%</fc> | <fc=#FF4000> %mpris2%</fc> | %default:Master% | %wlp2s0wi% | %date% %trayerpad%"
